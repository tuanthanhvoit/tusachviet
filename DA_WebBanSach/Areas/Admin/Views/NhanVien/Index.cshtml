@model IEnumerable<DA_WebBanSach.Models.NguoiDung>
@{
    ViewBag.Title = "Nhân Viên";
}
<ul class="breadcrumb">
      <li><a href="@Url.Action("Index","Home")">Quản Lý</a><span class="divider">&raquo;</span></li>
      <li>Nhân Viên</li>
</ul>
<div class="row">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h5>
                    Danh Sách Nhân Viên</h5>
                <div class="widget-control pull-right">
                    <a href="#" data-toggle="dropdown" class="btn dropdown-toggle"><i class="icon-plus"></i>
                        <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Create")"><i class="icon-plus"></i>Thêm Mới Nhân Viên</a></li>
                    </ul>
                </div>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <table class="data-tbl-tools table">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Họ Tên
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Ngày Sinh
                                </th>
                                <th>
                                    Ngày Vào Làm
                                </th>
                                <th>
                                    Điện Thoại
                                </th>
                                <th>
                                    Giới Tính
                                </th>
                                <th>
                                    Địa Chỉ
                                </th>
                                <th>
                                    Quận
                                </th>
                                <th>
                                    Thành Phố
                                </th>
                                <th>
                                    Chức Vụ
                                </th>
                                <th>
                                    Chức năng
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HoTen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgaySinh)
                                    </td>
                                    <td>
                                        @foreach (var ng in item.NhanViens)
                                        {
                                            @ng.NgayVaoLam.ToShortDateString()
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DienThoai)
                                    </td>
                                    <td>
                                        @if (item.GioiTinh == true)
                                        {
                                            var gioitinh = "Nam";
                                            @Html.DisplayFor(model => gioitinh)
                                        }
                                        else
                                        {
                                            var gioitinh = "Nữ";
                                            @Html.DisplayFor(model => gioitinh)
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiaChi)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Quan)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ThanhPho)
                                    </td>
                                    <td>
                                        @foreach (string chucvu in Roles.GetRolesForUser(item.UserName))
                                        {
                                            @chucvu<br />
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "NhanVien", new { id = item.UserId })" class="color-icons find_co" title="Xem Chi Tiết"></a> 
                                        <a href="@Url.Action("Edit", "NhanVien", new { id = item.UserId })" class="color-icons hammer_screwdriver_co" title="Sửa"></a> 
                                        <a href="@Url.Action("Delete", "NhanVien", new { id = item.UserId })" class="color-icons cross_co" title="Xóa"></a> 
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@model DA_WebBanSach.Models.KhoHang

@{
    ViewBag.Title = "Delete";
}
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Quản Lý</a><span class="divider">&raquo;</span></li>
    <li><a href="@Url.Action("Index", "KhoHang")">Kho Hàng</a><span class="divider">&raquo;</span></li>
    <li>Xóa Kho Hàng</li>
</ul>
<div class="row">
    <div class="span12">
        <div class="nonboxy-widget">
            <div class="widget-head">
                <h5>
                    <i class="black-icons blocks_images"></i>Thông Tin Kho Hàng
                </h5>
                
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <div class="form-horizontal well" id="signupform">
                    <fieldset>
                        <div class="control-group">
                            <label class="control-label"> <b>Ngày Nhập:</b></label>
                            <div class="control-labelb">
                                @Html.DisplayFor(model => model.NgayNhap)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label"> <b>Số Lượng:</b></label>
                            <div class="control-labelb">
                                @Html.DisplayFor(model => model.SoLuongNhap)
                            </div>
                        </div>
                        <div class="control-group">
                            <label class="control-label"> <b>Tên Sách:</b></label>
                            <div class="control-labelb">
                                @Html.DisplayFor(model => model.Sach.TenSach)
                            </div>
                        </div>
                    </fieldset>
                    @using (Html.BeginForm()) {
                    <div class="form-actions">
                        <input type="submit" value="Delete" class="btn btn-primary" />
                        <a href="@Url.Action("Index", "KhoHang")" class="btn btn-info">Trở Về Trang Trước</a> 
                    </div>
                    }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


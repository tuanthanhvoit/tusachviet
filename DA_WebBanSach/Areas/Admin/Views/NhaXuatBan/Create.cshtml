@model DA_WebBanSach.Models.NhaXuatBan

@{
    ViewBag.Title = "Thêm Nhà Xuất Bản";
}

<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Quản Lý</a><span class="divider">&raquo;</span></li>
    <li><a href="@Url.Action("Index", "NhaXuatBan")">Nhà Xuất Bản</a><span class="divider">&raquo;</span></li>
    <li>Thêm Nhà Xuất Bản</li>
</ul>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="span12">
            <div class="nonboxy-widget">
                <div class="widget-head">
                    <h5>
                        <i class="black-icons blocks_images"></i>Thêm Nhà Xuất Bản: 
                    </h5>
                </div>
                <div class="widget-content">
                    <div class="widget-box">
                        <div class="form-horizontal well" id="signupform">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label">
                                    <b>Tên Nhà Xuất Bản:</b></label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.TenNXB)
                                    @Html.ValidationMessageFor(model => model.TenNXB)
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    <b>Địa Chỉ:</b></label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.DiaChi)
                                    @Html.ValidationMessageFor(model => model.DiaChi)
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    <b>Quận:</b></label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Quan)
                                    @Html.ValidationMessageFor(model => model.Quan)
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    <b>Thành Phố:</b></label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.ThanhPho)
                                    @Html.ValidationMessageFor(model => model.ThanhPho)
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    <b>Điện Thoại:</b></label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.DienThoai)
                                    @Html.ValidationMessageFor(model => model.DienThoai)
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    <b>Email:</b></label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.Email)
                                    @Html.ValidationMessageFor(model => model.Email)
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-actions">
                            <input type="submit" value="Thêm Mới" class="btn btn-success" /> 
                            <a href="@Url.Action("Index", "NhaXuatBan")" class="btn btn-info">Trở Về Trang Trước</a>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

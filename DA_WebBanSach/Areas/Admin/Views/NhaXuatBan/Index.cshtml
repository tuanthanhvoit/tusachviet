@model IEnumerable<DA_WebBanSach.Models.NhaXuatBan>

@{
    ViewBag.Title = "Nhà Xuất Bản";
}
<ul class="breadcrumb">
      <li><a href="@Url.Action("Index","Home")">Quản Lý</a><span class="divider">&raquo;</span></li>
      <li>Nhà Xuất Bản</li>
</ul>
<div class="row">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h5>
                    Danh Sách Nhà Xuất Bản</h5>
                <div class="widget-control pull-right">
                    <a href="#" data-toggle="dropdown" class="btn dropdown-toggle"><i class="icon-plus"></i>
                        <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Create")"><i class="icon-plus"></i>Thêm Mới Nhà Xuất Bản</a></li>
                    </ul>
                </div>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <table class="data-tbl-tools table">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Tên Nhà Xuất Bản
                                </th>
                                <th>
                                    Địa Chỉ
                                </th>
                                <th>
                                    Điện Thoại
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Chức Năng
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NhaXuatBanID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenNXB)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiaChi), @Html.DisplayFor(modelItem => item.Quan), @Html.DisplayFor(modelItem => item.ThanhPho)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DienThoai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "NhaXuatBan", new { id = item.NhaXuatBanID })" class="color-icons find_co" title="Xem Chi Tiết"></a> 
                                        <a href="@Url.Action("Edit", "NhaXuatBan", new { id = item.NhaXuatBanID })" class="color-icons hammer_screwdriver_co" title="Sửa"></a> 
                                        <a href="@Url.Action("Delete", "NhaXuatBan", new { id = item.NhaXuatBanID })" class="color-icons cross_co" title="Xóa"></a> 
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@model DA_WebBanSach.Models.ChungLoaiSach

@{
    ViewBag.Title = "Chi Tiết Loại Sách";
}

<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Quản Lý</a><span class="divider">&raquo;</span></li>
    <li><a href="@Url.Action("Index", "ChungLoaiSach")">Chủng Loại Sách</a><span class="divider">&raquo;</span></li>
    <li>Thông Tin Chủng Loại Sách</li>
</ul>
<div class="row">
    <div class="span12">
        <div class="nonboxy-widget">
            <div class="widget-head">
                <h5 class="pull-left">
                    Chủng Loại Sách</h5>
                <div class="btn-group pull-right">
                    <button data-toggle="dropdown" class="btn dropdown-toggle">
                        <i class="icon-cog "></i><span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Create", "ChungLoaiSach")"><i class="icon-file"></i>Thêm Chủng Loại Sách</a></li>
                        <li><a href="@Url.Action("Delete", "ChungLoaiSach", new { id = Model.ChungLoaiSachID })"><i class="icon-trash"></i>Xóa Chủng Loại Sách</a></li>
                        <li><a href="@Url.Action("Edit", "ChungLoaiSach", new { id = Model.ChungLoaiSachID })"><i class="icon-wrench"></i>Sửa Chủng Loại Sách</a></li>
                    </ul>
                </div>
            </div>
            <table class="table table-default table-bordered">
                <thead>
                    <tr>
                        <th>
                            Tên Chủng Loại Sách
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.TenChungLoai)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
@if (Model.LoaiSaches != null)
{ 
    <div class="row">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h5>@Html.DisplayTextFor(model => model.TenChungLoai)</h5>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <table class="data-tbl-tools table">
                        <thead>
                            <tr>
                                <th>
                                    Mã Loại Sách
                                </th>
                                <th>
                                    Tên Loại Sách
                                </th>
                                <th>
                                    Ghi Chú
                                </th>
                                <th>
                                    Chức năng
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LoaiSaches)
                            {
                                <tr>
                                    <td>
                                        @item.LoaiSachID
                                    </td>
                                    <td>
                                        @item.TenLS
                                    </td>
                                    <td>
                                        @item.GhiChu
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "LoaiSach", new { id = item.LoaiSachID })" class="color-icons find_co" title="Xem Chi Tiết"></a> 
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
}
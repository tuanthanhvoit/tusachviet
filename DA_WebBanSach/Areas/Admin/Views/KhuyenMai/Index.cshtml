@model IEnumerable<DA_WebBanSach.Models.KhuyenMai>

@{
    ViewBag.Title = "Khuyến Mãi";
}
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Quản Lý</a><span class="divider">&raquo;</span></li>
    <li>Khuyến Mãi</li>
</ul>
<div class="row">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h5>
                    Danh Sách Khuyến Mãi</h5>
                <div class="widget-control pull-right">
                    <a href="#" data-toggle="dropdown" class="btn dropdown-toggle"><i class="icon-plus">
                    </i><b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Create")"><i class="icon-plus"></i>Thêm Mới Khuyến Mãi</a></li>
                    </ul>
                </div>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <table class="data-tbl-tools table">
                        <thead>
                            <tr>
                                <th>
                                    Mã
                                </th>
                                <th>
                                    Tên Đợt Khuyến Mãi
                                </th>
                                <th>
                                    Giảm Giá
                                </th>
                                <th>
                                    Ngày Bắt Đầu
                                </th>
                                <th>
                                    Ngày Kết Thúc
                                </th>
                                <th>
                                    Chức năng
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.KhuyenMaiID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenDotKM)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GiaGiam)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayBatDau)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgayKetThuc)
                                    </td>
                                    <td>
                                        <a href="@Url.Action("ThemSachKhuyenMai", "KhuyenMai", new { id = item.KhuyenMaiID })" class="color-icons book_previous_co" title="Thêm Sách Vào Đợt Khuyến Mãi">
                                        </a>
                                        <a href="@Url.Action("Details", "KhuyenMai", new { id = item.KhuyenMaiID })" class="color-icons find_co" title="Xem Chi Tiết">
                                        </a><a href="@Url.Action("Edit", "KhuyenMai", new { id = item.KhuyenMaiID })" class="color-icons hammer_screwdriver_co" title="Sửa">
                                        </a><a href="@Url.Action("Delete", "KhuyenMai", new { id = item.KhuyenMaiID })" class="color-icons cross_co" title="Xóa">
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

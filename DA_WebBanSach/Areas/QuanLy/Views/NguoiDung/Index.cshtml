@model IEnumerable<DA_WebBanSach.Models.NguoiDung>
@{
    ViewBag.Title = "Khách Hàng";
}
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Quản Lý</a><span class="divider">&raquo;</span></li>
    <li>Khách Hàng</li>
</ul>
<div class="row">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h5>
                    Danh Sách Khách Hàng</h5>
                <div class="widget-control pull-right">
                    <a href="#" data-toggle="dropdown" class="btn dropdown-toggle"><i class="icon-plus">
                    </i><b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Create")"><i class="icon-plus"></i>Thêm Mới Khách Hàng</a></li>
                    </ul>
                </div>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <table class="data-tbl-tools table">
                        <thead>
                            <tr>
                                <th>
                                    ID
                                </th>
                                <th>
                                    Tên Đăng Nhập
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Họ Tên
                                </th>
                                <th>
                                    Giới Tính
                                </th>
                                <th>
                                    Ngày Sinh
                                </th>
                                <th>
                                    Điện Thoại
                                </th>
                                <th>
                                    Địa Chỉ
                                </th>
                                <th>
                                    Điểm Thưởng
                                </th>
                                <th>
                                    Chức năng
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.UserName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HoTen)
                                    </td>
                                    <td>
                                        @if (item.GioiTinh == true)
                                        {
                                            @:Nam
                                        }
                                        else
                                        {
                                            @:Nữ
                                        }
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NgaySinh)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DienThoai)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DiaChi), @Html.DisplayFor(modelItem => item.Quan), @Html.DisplayFor(modelItem => item.ThanhPho)
                                    </td>
                                    <td>
                                        @foreach (var dt in item.KhachHangs)
                                        {
                                            @dt.TongTien
                                        }
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Details", "NguoiDung", new { id = item.UserId })" class="color-icons find_co" title="Xem Chi Tiết">
                                        </a><a href="@Url.Action("Edit", "NguoiDung", new { id = item.UserId })" class="color-icons hammer_screwdriver_co" title="Sửa">
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@model DA_WebBanSach.Models.LoaiSach

@{
    ViewBag.Title = "Thêm Loại Sách";
}
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Quản Lý</a><span class="divider">&raquo;</span></li>
    <li><a href="@Url.Action("Index", "LoaiSach")">Loại Sách</a><span class="divider">&raquo;</span></li>
    <li>Thêm Loại Sách</li>
</ul>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="span12">
            <div class="nonboxy-widget">
                <div class="widget-head">
                    <h5>
                        <i class="black-icons blocks_images"></i>Thêm Mới Loại Sách: 
                    </h5>
                </div>
                <div class="widget-content">
                    <div class="widget-box">
                        <div class="form-horizontal well" id="signupform">
                        <fieldset>
                            <div class="control-group">
                                <label class="control-label">
                                    <b>Tên Loại Sách:</b></label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.TenLS)
                                    @Html.ValidationMessageFor(model => model.TenLS)
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    <b>Chủng Loại Sách:</b></label>
                                <div class="controls">
                                    @Html.DropDownList("ChungLoaiSachID", (IEnumerable<SelectListItem>)ViewBag.ChungLoaiSachID, new { @class = "chzn-select" })
                                    @Html.ValidationMessageFor(model => model.ChungLoaiSach.TenChungLoai)
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">
                                    <b>Ghi Chú:</b></label>
                                <div class="controls">
                                    @Html.TextAreaFor(model => model.GhiChu)
                                    @Html.ValidationMessageFor(model => model.GhiChu)
                                </div>
                            </div>
                        </fieldset>
                        <div class="form-actions">
                            <input type="submit" value="Thêm" class="btn btn-success" /> 
                            <a href="@Url.Action("Index", "LoaiSach")" class="btn btn-info">Trở Về Trang Trước</a>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

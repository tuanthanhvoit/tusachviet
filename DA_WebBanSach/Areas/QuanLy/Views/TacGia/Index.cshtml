@model IEnumerable<DA_WebBanSach.Models.TacGia>

@{
    ViewBag.Title = "Tác Giả";
}
<ul class="breadcrumb">
      <li><a href="@Url.Action("Index","Home")">Quản Lý</a><span class="divider">&raquo;</span></li>
      <li>Tác Giả</li>
</ul>
<div class="row">
    <div class="span12">
        <div class="widget-block">
            <div class="widget-head">
                <h5>
                    Danh Sách Tác Giả</h5>
                <div class="widget-control pull-right">
                    <a href="#" data-toggle="dropdown" class="btn dropdown-toggle"><i class="icon-plus"></i>
                        <b class="caret"></b></a>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Create")"><i class="icon-plus"></i>Thêm Mới Tác Giả</a></li>
                    </ul>
                </div>
            </div>
            <div class="widget-content">
                <div class="widget-box">
                    <table class="data-tbl-tools table">
                        <thead>
                            <tr>
                                <th>
                                    Tên ID
                                </th>
                                <th>
                                    Tên Tác Giả
                                </th>
                                <th>
                                    Ghi Chú
                                </th>
                                <th>
                                    Chức Năng
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TacGiaID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TenTG)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GhiChu)
                                    </td>
                                    <td>

                                        <a href="@Url.Action("ThemSachTacGia", "TacGia", new { id = item.TacGiaID })" class="color-icons book_previous_co" title="Thêm Tác Giả Vào Sách">
                                        </a>
                                        <a href="@Url.Action("XoaSachTacGia", "TacGia", new { id = item.TacGiaID })" class="color-icons bin_closed_co" title="Xóa Sách Của Tác Giả">
                                        </a>
                                        <a href="@Url.Action("Details", "TacGia", new { id = item.TacGiaID })" class="color-icons find_co" title="Chi Tiết"></a> 
                                        <a href="@Url.Action("Edit", "TacGia", new { id = item.TacGiaID })" class="color-icons hammer_screwdriver_co" title="Sửa"></a> 
                                        <a href="@Url.Action("Delete", "TacGia", new { id = item.TacGiaID })" class="color-icons cross_co" title="Xóa"></a> 
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

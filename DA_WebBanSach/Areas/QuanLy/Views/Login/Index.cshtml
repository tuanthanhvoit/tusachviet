@model DA_WebBanSach.Models.LoginModel

@{
    ViewBag.Title = "Admin Đăng Nhập";
    Layout = "~/Areas/QuanLy/Views/Shared/_LoginLayout.cshtml";
}

<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            <div class="branding">
                <div class="logo">
                    <a href="@Url.Action("Index","Home")">
                        <img src="~/img/logo.png" width="168" height="40" alt="Logo"></a>
                </div>
            </div>
            <ul class="nav pull-right">
                <li><a href="~/Home/Index"><i class="icon-share-alt icon-white"></i>Trở về trang chủ</a></li>
            </ul>
        </div>
    </div>
</div>
@using (Html.BeginForm(new { returnUrl = ViewBag.ReturnUrl }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="login-container">
        <div class="well-login">
            <div class="control-group">
                <div class="controls">
                    <div>
                        @Html.TextBoxFor(m => m.UserName, new { placeholder="Username" , @class="login-input user-name"})
                    </div>
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <div>
                        @Html.PasswordFor(m => m.Password, new { placeholder="Password" , @class="login-input user-pass"})
                    </div>
                </div>
            </div>
            <div class="clearfix">
                <button class="btn btn-inverse login-btn" type="submit">Login</button>
            </div>
            <div class="remember-me">
                @Html.CheckBoxFor(m => m.RememberMe, new { @class="rem_me"})
                Remeber Me
            </div>
        </div>
    </div>
}


@model DA_WebBanSach.Models.NhaXuatBan
@{
    ViewBag.Title = "Chi Tiết Nhà Xuất Bản";
}
<ul class="breadcrumb">
    <li><a href="@Url.Action("Index", "Home")">Quản Lý</a><span class="divider">&raquo;</span></li>
    <li><a href="@Url.Action("Index", "NhaXuatBan")">Nhà Xuất Bản</a><span class="divider">&raquo;</span></li>
    <li>Thông Tin Nhà Xuất Bản</li>
</ul>
<div class="row">
    <div class="span12">
        <div class="nonboxy-widget">
            <div class="widget-head">
                <h5 class="pull-left">
                    Nhà Xuất Bản</h5>
                <div class="btn-group pull-right">
                    <button data-toggle="dropdown" class="btn dropdown-toggle">
                        <i class="icon-cog "></i><span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="@Url.Action("Create", "NhaXuatBan")"><i class="icon-file"></i>Thêm Nhà
                            Xuất Bản</a></li>
                        <li><a href="@Url.Action("Delete", "NhaXuatBan", new { id = Model.NhaXuatBanID })"><i class="icon-trash">
                        </i>Xóa Nhà Xuất Bản</a></li>
                        <li><a href="@Url.Action("Edit", "NhaXuatBan", new { id = Model.NhaXuatBanID })"><i class="icon-wrench">
                        </i>Sửa Nhà Xuất Bản</a></li>
                    </ul>
                </div>
            </div>
            <table class="table table-default table-bordered">
                <thead>
                    <tr>
                        <th>
                            Tên Nhà Xuất Bản
                        </th>
                        <th>
                            Địa Chỉ
                        </th>
                        <th>
                            Điện Thoại
                        </th>
                        <th>
                            Email
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.TenNXB)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.DiaChi), @Html.DisplayFor(modelItem => modelItem.Quan),
                                @Html.DisplayFor(modelItem => modelItem.ThanhPho)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.DienThoai)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => modelItem.Email)
                            </td>
                        </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
@if (Model.Saches != null)
{ 
    <div class="row">
        <div class="span12">
            <div class="widget-block">
                <div class="widget-head">
                    <h5>
                        Danh Sách Sách Trong Nhà Xuất Bản @Html.DisplayFor(modelItem => modelItem.TenNXB)</h5>
                </div>
                <div class="widget-content">
                    <div class="widget-box">
                        <table class="data-tbl-tools table">
                            <thead>
                                <tr>
                                    <th>
                                        Tên Sách
                                    </th>
                                    <th>
                                        Ảnh Bìa
                                    </th>
                                    <th>
                                        Nhà Xuất Bản
                                    </th>
                                    <th>
                                        Ngày Xuất Bản
                                    </th>
                                    <th>
                                        Số Lượng Tồn
                                    </th>
                                    <th>
                                        Chức năng
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Saches)
                                {
                                    <tr>
                                        <td>
                                            @item.TenSach
                                        </td>
                                        <td>
                                            @item.AnhBia
                                        </td>
                                        <td>
                                            @item.NhaXuatBan.TenNXB
                                        </td>
                                        <td>
                                            @item.NgayXuatBan
                                        </td>
                                        <td>
                                            @item.SoLuongTon
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", "Sach", new { id = item.SachID })" class="color-icons find_co" title="Xem Chi Tiết">
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
